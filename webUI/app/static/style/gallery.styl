@import 'default';

.gene_img
    height:30px
    width:1000px
    
#main_info_div
    margin-bottom:3em
    
.panel-body
    background-color:white
    margin:auto
    padding:3em 3em

#scale
    color:tomato

.hint
    position: relative
    display: inline-block
    overflow: visible

.hint .hinttext
    visibility: hidden
    background-color: black
    color: #fff
    text-align: center
    border-radius: 6px
    position: absolute
    z-index: 1
    padding:3px 10px
    width:8em

h4
    color:orangered

td img
    height:1em
    width:2em
    
#section_div
    width:100%
    margin:auto

.sequence
    width: 1044px
    word-wrap: break-word
    border: 1px dotted
    border-color: #eeeeee
    
.well
    background-color:white
    border:1px solid
    border-color: #eeeeee
    
.highlight
    color:dogerblue
    font-weight:bold

a.logo
    display:inline-block
    margin-left:0.2em
    height:1.3em
    width:1.3em
    
img.logo
    height:100%
    width:100%
    border: 1px solid 
    border-radius:3px