@import 'default';

.prj_name {
 color:tomato;
 font-size:20px;
}

.container>h2 {
    margin-top:1em;
    margin-bottom: 2em;
}

.steps 
    margin-top:4em;
    margin-bottom: 5em;

.steps>ul
    display:table
    width:100%
    table-layout: fixed;
    
.steps li
    display:inline-table
    width:50%
    text-align:left 

div.tooltip-inner 
  max-width: none
  white-space: nowrap
  text-align:left

.progress
    position: relative
    border-color: #337ab7
    border-style: solid
    border-width: 1px
    margin-bottom:0px

.progress span 
    position: absolute
    text-align:center
    width: 100%
    color: black

th
  vertical-align:middle !important
  //border:1px solid grey !important

td
  @extends th
  

.show
    cursor:default