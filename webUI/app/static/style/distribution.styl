@import 'default';

table
    margin:auto

.size
    height:100px
    width:100px

#list ul
    text-align:center
    list-style: none

#list li
    @extends .size;
    background-color:#d9edf7
    margin-right:5px
    margin-bottom:2em

#list li img
    @extends .size;
    cursor:pointer

div#type
    text-align:center

#type span
    padding:.5em 3em

#type h3
    margin-bottom:1em

div#img
    text-align:center
    margin-bottom:3em

#img img
    height:800px
    width:800px

.title
    font-weight:bold
    
.nbs_title
    @extends .title
    background-color:blue
    color:white

.rlk_title
    @extends .title
    background-color:green
    color:white

.rlp_title
    @extends .title
    background-color:orange
    color:white
    
.tmcc_title
    @extends .title
    background-color:black
    color:white
    
.all_title
    @extends .title
    background-color:white
    color:black
 
#main
    float:right
    margin-right:3em
        
#list
    float:left
    margin-left:3em
    margin-top:10em